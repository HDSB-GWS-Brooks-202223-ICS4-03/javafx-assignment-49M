<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MenuController">
  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="400.0" prefWidth="640.0" style="-fx-background-color: beige;" VBox.vgrow="ALWAYS">
      <children>
        <Label fx:id="title" alignment="CENTER" layoutX="104.0" layoutY="37.0" prefHeight="54.0" prefWidth="443.0" style="-fx-background-color: green; -fx-border-color: black; -fx-border-width: 3;" text="Wordle Plus+" textAlignment="CENTER" textFill="WHITE" wrapText="false">
          <font>
            <Font size="18.0" />
          </font>
        </Label>
            <Button fx:id="clickButton" layoutX="288.0" layoutY="314.0" mnemonicParsing="false" onAction="#buttonIsClicked" text="Play Game" />
            <Text layoutX="161.0" layoutY="143.0" strokeType="OUTSIDE" strokeWidth="0.0" text="To play Wordle, you need to guess a random five-letter word within six attempts. Enter your guess in the box provided and hit enter. Each correct letter in the correct position will be highlighted in green, each correct letter in the wrong position will be highlighted in yellow, and each incorrect letter will be highlighted grey. Use this feedback to refine your guesses and try to guess the word within six attempts. Good luck!" textAlignment="CENTER" wrappingWidth="329.21630859375">
               <font>
                  <Font size="15.0" />
               </font></Text>
      </children>
    </AnchorPane>
  </children>
</VBox>
